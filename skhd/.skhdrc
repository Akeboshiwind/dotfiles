# .skhdrc


# >> Panic

alt - q : chunkc tiling::window --close
#alt + shift - c : chunkc reload
alt + shift - r : brew services restart chunkwm



# >> Terminal

alt - return : kitty --title floatterm #TODO: Move same window if alreay open
alt + shift - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~



# >> Program Launching

alt - r : open -a Spotlight
#alt - f : open -an 'Google Chrome'
#alt - s : screenshot



# >> Focus

alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east



# >> Moving

alt + shift - h : chunkc tiling::window --warp west
alt + shift - j : chunkc tiling::window --warp south
alt + shift - k : chunkc tiling::window --warp north
alt + shift - l : chunkc tiling::window --warp east



# >> Resizing

## Slowly
alt + ctrl - h : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
alt + ctrl - j : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
alt + ctrl - k : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
alt + ctrl - l : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

## Quickly
alt + ctrl - h : chunkc tiling::window --use-temporary-ratio 0.5 --adjust-window-edge west
alt + ctrl - j : chunkc tiling::window --use-temporary-ratio 0.5 --adjust-window-edge south
alt + ctrl - k : chunkc tiling::window --use-temporary-ratio 0.5 --adjust-window-edge north
alt + ctrl - l : chunkc tiling::window --use-temporary-ratio 0.5 --adjust-window-edge east



# >> Workspace Management

alt - 1 : chunkc tiling::desktop --focus 1
alt - 2 : chunkc tiling::desktop --focus 2
alt - 3 : chunkc tiling::desktop --focus 3
alt - 4 : chunkc tiling::desktop --focus 4
alt - 5 : chunkc tiling::desktop --focus 5
alt - 6 : chunkc tiling::desktop --focus 6
alt - 7 : chunkc tiling::desktop --focus 7
alt - 8 : chunkc tiling::desktop --focus 8
alt - 9 : chunkc tiling::desktop --focus 9
alt - 0 : chunkc tiling::desktop --focus 0

alt + shift - 1 : chunkc tiling::desktop --send-to-desktop 1;\
                  chunkc tiling::desktop --focus 1
alt + shift - 2 : chunkc tiling::desktop --send-to-desktop 2;\
                  chunkc tiling::desktop --focus 2
alt + shift - 3 : chunkc tiling::desktop --send-to-desktop 3;\
                  chunkc tiling::desktop --focus 3
alt + shift - 4 : chunkc tiling::desktop --send-to-desktop 4;\
                  chunkc tiling::desktop --focus 4
alt + shift - 5 : chunkc tiling::desktop --send-to-desktop 5;\
                  chunkc tiling::desktop --focus 5
alt + shift - 6 : chunkc tiling::desktop --send-to-desktop 6;\
                  chunkc tiling::desktop --focus 6
alt + shift - 7 : chunkc tiling::desktop --send-to-desktop 7;\
                  chunkc tiling::desktop --focus 7
alt + shift - 8 : chunkc tiling::desktop --send-to-desktop 8;\
                  chunkc tiling::desktop --focus 8
alt + shift - 9 : chunkc tiling::desktop --send-to-desktop 9;\
                  chunkc tiling::desktop --focus 9
alt + shift - 0 : chunkc tiling::desktop --send-to-desktop 0;\
                  chunkc tiling::desktop --focus 0

# Toggle float
alt + shift - space : chunkc tiling::window --toggle float;\
                      chunkc tiling::window --grid-layout 4:4:1:1:2:2


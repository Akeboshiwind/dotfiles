# Theme
theme = Kanagawa Wave

# Behavior
confirm-close-surface = false
# Font
font-size = 17

# Shift+Enter for Claude Code newlines
keybind = shift+enter=text:\n

# Splits (tmux-style with ctrl+a prefix)
split-preserve-zoom = navigation
keybind = ctrl+a>shift+five=new_split:right
keybind = ctrl+a>shift+quote=new_split:down
keybind = ctrl+a>x>y=close_surface
keybind = ctrl+a>z=toggle_split_zoom

# Split navigation
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:down
keybind = ctrl+a>k=goto_split:up
keybind = ctrl+a>l=goto_split:right

# Tabs (tmux-style)
keybind = ctrl+a>c=new_tab
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab
keybind = ctrl+a>,=prompt_surface_title
keybind = ctrl+a>.=move_tab:1
keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5
keybind = ctrl+a>6=goto_tab:6
keybind = ctrl+a>7=goto_tab:7
keybind = ctrl+a>8=goto_tab:8
keybind = ctrl+a>9=goto_tab:9

## Quick terminal (tmux popup equivalent)
#keybind = ctrl+a>j=toggle_quick_terminal

# Command palette
keybind = ctrl+a>shift+;=toggle_command_palette
